<div class="container" style="margin-top:100px;">
  <h1 class="my-4">Movies Database
    <small>My Favos</small>
  </h1>
  <% @r.each do |m| %>
  <div class="row mb-3">
    <div class="col-md-2">
      <a href="#">
        <img class="img-fluid rounded mb-3 mb-md-0" src="https://image.tmdb.org/t/p/w185_and_h278_bestv2/<%= m['movie_poster'] %>" alt="">
      </a>
    </div>
    <div class="col-md-10">
      <h3><%= m['movie_title'] %></h3>
      <p><%= m['movie_overview'] %></p>
      <%= form_tag '/favos/destroy', method: :post do %>
      <%= hidden_field_tag "favo_id", m['id'] %>
      <button class="btn btn-danger" href="#">Remove</button>
      <% end %>
    </div>
  </div>
  <% end %>
  <!-- /.row -->
</div>
