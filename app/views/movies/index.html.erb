<h1>Movies#index</h1>
<p>Find me in app/views/movies/index.html.erb</p>

<!-- Page Content -->
<div class="container">

  <!-- Page Heading -->
  <h1 class="my-4">Page Heading
    <small>Secondary Text</small>
  </h1>

  <% if params[:search] %>
  <% @r['results'].each do |m| %>
  <div class="row mb-3">
    <div class="col-md-2">
      <a href="#">
        <img class="img-fluid rounded mb-3 mb-md-0" src="https://image.tmdb.org/t/p/w185_and_h278_bestv2/<%= m['poster_path'] %>" alt="">
      </a>
    </div>
    <div class="col-md-10">
      <h3><%= m['title'] %></h3>
      <p><%= m['overview'] %></p>
      <a class="btn btn-primary" href="#">Add Favo</a>
    </div>
  </div>
  <% end %>
  <!-- /.row -->

  <!-- Pagination -->
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">1</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">2</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">3</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
  <% end %>

</div>
<!-- /.container -->

<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; MOVEDB 2018</p>
  </div>
  <!-- /.container -->
</footer>
